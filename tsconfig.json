{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES2015",
    "target": "ES6",
    "lib": [
      "ES2020.Symbol.WellKnown",
    ],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
